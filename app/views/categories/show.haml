%h2 Seminare der Kategorie #{@category.name}

%p=@category.description

.ui.divided.list
  - @category.seminars.each do |seminar|
    .item
      .content
        %a.header{:href=>url(:seminar, :show, seminar.id)}=seminar.name
        .description
          .ui.label
            =I18n.l(seminar.date_from, :format => :short)
            ="-"
            =I18n.l(seminar.date_to, :format => :short)
          (mit "#{seminar.referees.map(&:full_name).join(" und ")}")
