=I18n.t('registration.for_seminar')
%b=@seminar.name
=I18n.t('from')
=i18n_short_from @seminar
=I18n.t('to')
=i18n_short_to @seminar

.ui.fluid.form.segment
  = form_for :registration, '/seminar/register', :id => 'register' do |f|
    %input(type="hidden" value="#{@seminar.id}" name="seminar_id")
    %small
      = f.error_messages
      .two.fields
        .field
          = f.text_field_block :firstname, :caption => 'Vorname'
        .field
          = f.text_field_block :lastname,  :caption => 'Nachname', :class => 'field'
      .three.fields
        .field
          = f.text_field_block :street_and_no, :caption => 'Straße und Hausnummer'
        .field
          = f.text_field_block :zip,     :caption => 'PLZ'
        .field
          = f.text_field_block :city,    :caption => 'Ort'
      = f.text_field_block :country, :caption => 'Land'
      .three.fields
        .field
          = f.text_field_block :email,   :caption => 'E-Mail'
        .field
          = f.text_field_block :phone,   :caption => 'Telefon'
        .field
          = f.text_field_block :mobile,  :caption => 'Handy'
      = f.text_field_block :comment, :caption => 'Bemerkungen'
      .fields
        %small
          .ui.basic.accordion.field
            .title
              %i.icon.dropdown
              Weitere Teilnehmer
            .content.field
              .three.fields
                .field
                  = f.text_field_block :email,   :caption => 'Vorname'
                .field
                  = f.text_field_block :email,   :caption => 'Name'
                .field
                  = f.text_field_block :email,   :caption => 'Alter'

      %h5.ui.header.red Rücktrittsbedingungen
      %small
        = @seminar.cancellation_conditions
      = f.check_box_block :accept_terms, :caption => 'Ich habe die Rücktrittsbedingungen gelesen und akzeptiere sie.'
      %h5.ui.header.red Sieben Linden Seminar Portal
      %small
        Wir haben viele Ideen, wie wir diese Seite noch besser gestalten können und mit Funktionen wie z.B. Teilnehmerlisten, Mitfahrbörse oder Dokumentenhinterlage ausstatten.
      = f.check_box_block :accept_future_notice, :caption => 'Ich würde am neuen Teilnehmerportal teilnehmen und möchte benachrichtigt werden sobald dieses fertig gestellt ist.'
      = f.submit_block "Anmelden", :class => 'ui submit button blue'

:javascript
  $('.ui.accordion').accordion();
